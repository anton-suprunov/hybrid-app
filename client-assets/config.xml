<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"
	xmlns:gap = "http://phonegap.com/ns/1.0"
	id        = "com.prestosports.frdev"
	versionCode = "221600"
	version   = "2.2.16">

	<name>Front Row Dev 1</name>
	<description>Front Row Dev 1</description>
	<author href="https://prestosports.com" email="support@prestosports.com">PrestoSports</author>
	
	<gap:config-file platform="ios" parent="CFBundleShortVersionString"> 
		<string>2.2.16</string> 
	</gap:config-file>
	
	<gap:platform name="ios" />
	<gap:platform name="android" />
	
	<preference name="phonegap-version" value="cli-5.2.0" />
	<preference name="android-build-tool" value="gradle" />

	<!-- splashscreen settings -->
	<preference name="SplashScreen" value="splash" />
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="SplashScreenDelay" value="30000" />
	<preference name="ShowSplashScreenSpinner" value="false" />

	<preference name="prerendered-icon" value="true" />
	<preference name="StatusBarOverlaysWebView" value="false" />
	<preference name="StatusBarBackgroundColor" value="#000000" />

	<!-- disable bounce -->
	<preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="UIWebViewBounce" value="false" />
		
	<feature name="http://api.phonegap.com/1.0/device" />

	<!-- default icon-->
	<icon src="icon.png" />

	<platform name="ios">
		<icon src="www/client-assets/ios-icons/Icon.png" width="57" height="57" />
		<icon src="www/client-assets/ios-icons/Icon-72.png" width="72" height="72" />
		<icon src="www/client-assets/ios-icons/Icon@2x.png" width="114" height="114" />
		<icon src="www/client-assets/ios-icons/Icon-76.png" width="76" height="76" />
		<icon src="www/client-assets/ios-icons/Icon-120.png" width="120" height="120" />
		<icon src="www/client-assets/ios-icons/Icon-152.png" width="152" height="152" />
		<icon src="www/client-assets/ios-icons/Icon-180.png" width="180" height="180" />
	</platform>

	<platform name="android">
		<icon src="www/client-assets/android-icons/ldpi.png" qualifier="ldpi" />
		<icon src="www/client-assets/android-icons/mdpi.png" qualifier="mdpi" />
		<icon src="www/client-assets/android-icons/hdpi.png" qualifier="hdpi" />
		<icon src="www/client-assets/android-icons/xhdpi.png" qualifier="xhdpi" />
		<icon src="www/client-assets/android-icons/xxhdpi.png" qualifier="xxhdpi" />
		<icon src="www/client-assets/android-icons/xxxhdpi.png" qualifier="xxxhdpi" />
	</platform>

	<!-- default splash -->
	<splash src="splash.png" />

	<platform name="ios">
		<splash src="www/client-assets/splashes/Default~iphone.png" width="320" height="480" />
		<splash src="www/client-assets/splashes/Default@2x~iphone.png" width="640" height="960" />
		<splash src="www/client-assets/splashes/Default-568h@2x.png" width="640" height="1136" />
		<splash src="www/client-assets/splashes/Default-Portrait~ipad.png"  width="768" height="1024" />
		<splash src="www/client-assets/splashes/Default-Landscape~ipad.png" width="1024" height="768" />
		<splash src="www/client-assets/splashes/Default-Portrait@2x~ipad.png" width="1536" height="2008" />
		<splash src="www/client-assets/splashes/Default-Landscape@2x~ipad.png" width="2048" height="1496" />
		<splash src="www/client-assets/splashes/Default-667h@2x.png" width="750" height="1334" />
		<splash src="www/client-assets/splashes/Default-Portrait-736@3x.png" width="1242" height="2208" />
	</platform>

	<platform name="android">
		
		<splash src="www/client-assets/splashes/320x480.9.png" qualifier="ldpi" />
		<splash src="www/client-assets/splashes/320x480.9.png" qualifier="mdpi" />
		<splash src="www/client-assets/splashes/480x800.9.png" qualifier="hdpi" />
		<splash src="www/client-assets/splashes/720x1280.9.png" qualifier="xhdpi" />
		<splash src="www/client-assets/splashes/720x1280.9.png" qualifier="xxhdpi" />
		
	</platform>
	
	<!-- core plugins  -->
	<plugin name="cordova-plugin-device" source="npm" spec="1.1.2" />
	<plugin name="cordova-plugin-dialogs" source="npm" spec="1.2.1" />
	<plugin name="cordova-plugin-inappbrowser" source="npm" spec="1.4.0" />
	<plugin name="cordova-plugin-network-information" source="npm" spec="1.2.1" />
	<plugin name="cordova-plugin-splashscreen" source="npm" spec="4.0.0" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="2.1.3" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="1.2.2" />
	
	<plugin name="phonegap-plugin-push" source="npm" spec="1.5.3">
		<param name="SENDER_ID" value="81921587804" />
	</plugin>
	<plugin spec="https://github.com/phonegap-build/GAPlugin.git#2.4.0" />
	<plugin name="cordova-plugin-insomnia" source="npm" spec="4.2.0" />
	<plugin name="cordova-plugin-customurlscheme" source="npm" spec="4.1.5">
  		<variable name="URL_SCHEME" value="frontrow.frdev" />
    </plugin>

    <access origin="*" />
	<allow-intent href="*" />

</widget>